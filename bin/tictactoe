#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Please select a square by entering 1-9, 1 for the top left and 9 for the bottom right:"
input = gets.strip
char = "X"

move(board, input, char)
display_board(board)
play(board)